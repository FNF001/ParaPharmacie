@model OrderDetail
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Change Order Status</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form asp-action="ChangeOrderStatus" enctype="multipart/form-data" asp-route-id="@Model.OrderDetailId" asp-route-orderId="@Model.OrderId" method="post">
                    <input hidden asp-for="OrderDetailId" />
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Order ID : @Model.OrderId</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Order Detail ID : @Model.OrderDetailId</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Creation Date : @Model.OrderDate</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">User Name : @Model.UserName</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Product : @Model.ProName</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Quantity : @Model.Qty</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Status : @Model.Status</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Change Status @Model.Status To : </label>
                            <select type="text" asp-for="Status" type="text" asp-items="ViewBag.StatusList"></select>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.box-body -->
</section>
