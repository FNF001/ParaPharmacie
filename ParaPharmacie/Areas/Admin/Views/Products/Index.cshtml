@model List<Product>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Products</h3>
                    <div class="box-tools">
                        <a asp-action="Create" asp-controller="Products" asp-area="Admin"
                           class="btn btn-info btn-sm">Add Product</a>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProName</td>
                                    <td>@item.Category.CatName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <img src="~/Product/@item.ProImage" style="width:150px; height:150px;" />
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.ProId" class="btn btn-primary btn-sm">Edit Product</a>
                                        <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.ProId" class="btn btn-danger btn-sm">Delete Product</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section>