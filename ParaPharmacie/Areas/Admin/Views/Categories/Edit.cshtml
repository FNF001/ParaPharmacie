@model Category
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Edit Category</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input hidden asp-for="CatId" />
                    <input hidden asp-for="CatPhoto"  />
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Category Name</label>
                            <input type="text" asp-for="CatName" class="form-control" id="exampleInputEmail1" placeholder="Enter Category Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Choose Image</label>
                            <input type="file" asp-for="File" id="exampleInputFile">
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.box-body -->
</section>
