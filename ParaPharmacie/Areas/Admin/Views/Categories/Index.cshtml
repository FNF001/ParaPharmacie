@model List<Category>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Categories</h3>
                    <div class="box-tools">
                            <a asp-action="Create" asp-controller="Categories" asp-area="Admin"
                               class="btn btn-info btn-sm">Add Category</a>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Category Name</th>
                                <th>Image</th>
                                <th>Action</th>                           
                            </tr>
                            
                               @foreach (var item in Model)
                               {
                            <tr>
                                <td>@item.CatName</td>
                                <td>
                                    <img src="~/category/@item.CatPhoto" style="width:150px; height:150px;"/>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Categories" asp-route-id="@item.CatId" class="btn btn-primary btn-sm">Edit Category</a>
                                    <a asp-action="Delete" asp-controller="Categories" asp-route-id="@item.CatId" class="btn btn-danger btn-sm">Delete Category</a>
                                </td>                               
                            </tr>      
                               }
                           
                         </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section>