@model ParaPharmacie.ViewModel.UsersWithRolesVM
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Change User Role</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form asp-action="ChangeUserRole" enctype="multipart/form-data" asp-route-id="@Model.Id" method="post">
                    <input hidden asp-for="Id" />
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">User ID : @Model.Id</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name : @Model.Name</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">User Name : @Model.UserName</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email : @Model.Email</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Role : @Model.RoleName</label>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Change User Role : @Model.RoleName To :</label>
                            <select type="text" asp-for="RoleName" type="text" asp-items="ViewBag.RoleList"></select>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.box-body -->
</section>
