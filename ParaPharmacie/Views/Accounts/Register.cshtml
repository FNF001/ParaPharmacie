@model RegisterVM
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <span class="breadcrumb-item active">Register</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Create an account</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form href="/Accounts/Register" method="post">
                    <div class="control-group">
                        <input type="text" class="form-control" placeholder="Your Name" asp-for="Name" />
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" placeholder="Your Email" asp-for="Email" />
                    </div>
                    <div class="control-group">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                    </div>
                    <div class="control-group">
                        <input type="password" class="form-control" placeholder="Confirm password" asp-for="ConfirmPassword" />
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit">
                            Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

